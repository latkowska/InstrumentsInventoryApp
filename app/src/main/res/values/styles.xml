<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorYellow</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Theme of the editor -->
    <style name="EditorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorYellow</item>
    </style>

    <!--Style of FAB button in activity catalog-->
    <style name="FAB">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_layout_margin</item>
    </style>

    <!--Catalog activity text views style-->
    <style name="TextViewStyle">
        <item name="android:layout_margin">@dimen/textViewmargin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--Catalog activity header text view style-->
    <style name="HeaderTextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/HeaderPadding</item>
    </style>

    <!--Editor activity style-->
    <!--Main Linera layout-->
    <style name="EditorActivitFirstLinLay">
        <item name="android:padding">@dimen/paddingFLL</item>
    </style>

    <!--Product's descriptive TextViews-->
    <style name="descriptiveTV">
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/paddingTV</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!--Edit Text fields-->
    <style name="EditTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <!--Order Button style-->
    <style name="OrderButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/buttonMarginTop</item>
        <item name="android:background">@color/colorLightGrey</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">16dp</item>
    </style>

    <!--List item-->
    <!--Product name TextViev-->
    <style name="ItemListProductNameStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:padding">@dimen/product_name_padding</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Price and Quantity TextView-->
    <style name="ProductPriceAndQuantityStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorMediumGrey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/product_price_padding</item>
    </style>

    <!-- Sale button style-->
    <style name="SaleButtonStyle">
        <item name="android:padding">@dimen/sale_btn_padding</item>
        <item name="android:layout_marginRight">@dimen/sale_btn_margin_right</item>
        <item name="android:layout_marginTop">@dimen/sale_btn_margin_top</item>
    </style>
</resources>
